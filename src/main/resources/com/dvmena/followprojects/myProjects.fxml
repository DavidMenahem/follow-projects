<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TableColumn?>
<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.dvmena.followprojects.controller.ProjectsController">
    <Label id ="vbox-label-add-project">Add project</Label>
    <Label>Project Name:</Label>

    <TextField fx:id="textName" maxWidth="400"/>

    <Label>Project description</Label>

    <TextField fx:id="textDescription" maxWidth="400"/>

    <Label>Project Link</Label>

    <TextField fx:id="textLink" maxWidth="400"/>

    <Button fx:id ="button" onAction="#onSave" text="Save">Save</Button>

    <TableView fx:id="table" layoutX="300" layoutY="300">
        <TableColumn prefWidth="75" fx:id ="name" text="Name"></TableColumn>
        <TableColumn prefWidth="200" fx:id ="description" text="Description"></TableColumn>
        <TableColumn prefWidth="200" fx:id ="link" text="Link"></TableColumn>
    </TableView>
</VBox>
